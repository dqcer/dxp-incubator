<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.4.8</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.dqcer</groupId>
    <artifactId>dxp-incubator</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>dxp-incubator</name>
    <packaging>pom</packaging>

    <modules>
        <module>dxp-framework</module>
        <module>dxp-provider</module>
        <module>dxp-tools</module>
    </modules>

    <properties>
        <dxp-incubator.version>0.0.1-SNAPSHOT</dxp-incubator.version>
        <spring-cloud-alibaba.version>2021.1</spring-cloud-alibaba.version>
        <java.version>1.8</java.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.alibaba.cloud</groupId>
                <artifactId>spring-cloud-alibaba-dependencies</artifactId>
                <version>${spring-cloud-alibaba.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.dqcer</groupId>
                <artifactId>dxp-framework-api</artifactId>
                <version>${dxp-incubator.version}</version>
            </dependency>
            <dependency>
                <groupId>com.dqcer</groupId>
                <artifactId>dxp-framework-dto</artifactId>
                <version>${dxp-incubator.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
